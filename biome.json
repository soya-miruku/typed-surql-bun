{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 200,
		"indentWidth": 2,
		"ignore": [".turbo", "/turbo", "/bun.lockb", "/turbo.json", "/apps/web/public", "/node_modules", "/dist", "/engines", "src/extensions", "/_build_", ".husky", ".sentry-native"]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useAwait": "error"
			},
			"recommended": true,
			"style": {
				"noArguments": "off",
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"performance": {
				"noDelete": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"complexity": {
				"noThisInStatic": "off",
				"noStaticOnlyClass": "off",
				"noForEach": "warn"
			}
		},
		"ignore": [".turbo", "/node_modules", "/turbo", "/bun.lockb", "/turbo.json", "/apps/web/public", "/dist", "/engines", "src/extensions", "_build_", ".husky", ".sentry-native"]
	}
}
